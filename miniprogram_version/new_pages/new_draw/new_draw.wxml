<!-- 新抽签页面 -->
<view class="container">
  <h1>准备抽签</h1>
  
  <view class="result-container">
    <text class="result-text">{{resultText}}</text>
    
    <view class="stats">
      <text>剩余教练: {{remainingNamesCount}}</text>
    </view>
  </view>
  
  <view class="draw-buttons" style="display: flex; flex-direction: column; align-items: center; gap: 20px; margin-top: 50px;">
    <button class="btn btn-primary" bindtap="startDraw" style="padding: 20px 40px; font-size: 24px; width: 300px;">
      {{isDrawing ? '停止抽签' : '开始抽签'}}
    </button>
    
    <button class="btn btn-secondary" bindtap="resetDraw" style="padding: 15px 30px; font-size: 20px; width: 250px;">
      重置抽签
    </button>
    
    <button class="btn btn-gray" bindtap="goBack" style="padding: 15px 30px; font-size: 20px; width: 200px;">
      返回首页
    </button>
  </view>
  
  <!-- 已抽中列表 -->
  <view class="drawn-list" style="margin-top: 50px;">
    <h3>已抽中教练</h3>
    <view class="name-list" style="max-height: 200px; overflow-y: auto;">
      <view wx:if="{{drawnNames.length === 0}}" class="empty-message">
        暂无抽中教练
      </view>
      <view wx:else>
        <view wx:for="{{drawnNames}}" wx:key="index" class="list-item">
          <text>{{index + 1}}. {{item}}</text>
        </view>
      </view>
    </view>
  </view>
</view>