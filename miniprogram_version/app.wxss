view, text, button, input, textarea, image, navigator, swiper, swiper-item, scroll-view, picker, picker-view, checkbox, radio, slider, switch, form, label, icon, progress, canvas {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

body {
  font-family: 'Arial', sans-serif;
  background-color: #f0f8ff;
}

.container {
  padding: 20px;
  min-height: 100vh;
}

.page {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

h1 {
  color: #333;
  text-align: center;
  margin-bottom: 40px;
  font-size: 32px;
}

h3 {
  color: #333;
  margin: 20px 0;
  font-size: 20px;
}

.btn {
  padding: 10px 20px;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  font-size: 16px;
  margin: 10px 0;
}

.btn-primary {
  background-color: #4CAF50;
  color: white;
}

.btn-secondary {
  background-color: #2196F3;
  color: white;
}

.btn-danger {
  background-color: #f44336;
  color: white;
}

.btn-gray {
  background-color: #607d8b;
  color: white;
}

.input {
  padding: 10px;
  border: 2px solid #ddd;
  border-radius: 5px;
  font-size: 16px;
  margin: 10px 0;
  width: 100%;
}

.list-container {
  margin: 20px 0;
  border: 1px solid #ddd;
  border-radius: 5px;
  overflow: hidden;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 15px;
  background-color: #f5f5f5;
  border-bottom: 1px solid #ddd;
}

.list-item {
  background-color: #e8f5e8;
  padding: 8px 12px;
  margin: 2px 0;
  border-radius: 3px;
  display: flex;
  align-items: center;
  gap: 10px;
}

.textarea {
  width: 100%;
  min-height: 150px;
  padding: 10px;
  border: 2px solid #ddd;
  border-radius: 5px;
  font-size: 16px;
  margin: 10px 0;
  resize: vertical;
}

.empty-message {
  text-align: center;
  color: #999;
  padding: 20px;
}

.select-all {
  display: flex;
  align-items: center;
  gap: 5px;
  cursor: pointer;
  font-weight: bold;
}

.batch-operations {
  display: flex;
  gap: 10px;
  margin-top: 20px;
  justify-content: center;
}

.qr-code-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20px;
}

.qr-code {
  width: 200px;
  height: 200px;
  margin: 20px 0;
}

.result-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 50px 0;
}

.result-text {
  font-size: 48px;
  font-weight: bold;
  color: #4CAF50;
  margin: 20px 0;
}

.modal {
  position: fixed;
  z-index: 1000;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  background-color: white;
  padding: 20px;
  border-radius: 10px;
  width: 85%;
  max-width: 420px;
  text-align: center;
}

.modal-input {
  width: 100%;
  padding: 12px 15px;
  margin: 20px 0;
  border: 2px solid #ddd;
  border-radius: 5px;
  font-size: 16px;
  box-sizing: border-box;
}

/* 修复placeholder显示问题 */
.modal-input::placeholder {
  font-size: 15px;
  text-align: center;
  opacity: 0.7;
}